<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height">


    <LinearLayout
        android:id="@+id/select_property_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_property"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            android:drawableLeft="@mipmap/location_icon"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/base_color"
            android:text="ddddd"
            android:textSize="@dimen/app_title_size" />

        <ImageView
            android:id="@+id/press_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/press_flag"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/logo" />


    <ImageButton
        android:id="@+id/login_bt"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/white_click_bg"
        android:src="@mipmap/login_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/white_click_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/login"
        android:textColor="@color/base_color"
        android:textSize="@dimen/app_title_size"
        android:visibility="gone" />

</RelativeLayout>